<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Dota2Stats" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorAccent">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#1c242d</item>
        <!-- Customize your theme here. -->

        <item name="android:fontFamily">@font/myriadpro_bold</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textColor">@color/white</item>

        <item name="android:background">"@null"</item>
    </style>

    <style name="Theme.Dota2Stats.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Dota2Stats.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Dota2Stats.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TabText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/myriadpro_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">11.7dp</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <style name="DialogCustomTheme" parent="android:Theme.Holo.Dialog.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
</resources>