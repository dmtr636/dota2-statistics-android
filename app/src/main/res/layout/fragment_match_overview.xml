<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView56"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/myriadpro_bold"
        android:letterSpacing="0.04"
        android:text="@string/level"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#9c9d9f"
        android:textSize="7dp"
        app:layout_constraintBottom_toTopOf="@+id/direInfoList"
        app:layout_constraintEnd_toEndOf="@+id/textView38"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/textView38"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout7" />

    <TextView
        android:id="@+id/textView55"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/myriadpro_bold"
        android:letterSpacing="0.04"
        android:text="@string/backpack"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#9c9d9f"
        android:textSize="7dp"
        app:layout_constraintBottom_toTopOf="@+id/direInfoList"
        app:layout_constraintEnd_toEndOf="@+id/textView36"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/textView36"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout7" />

    <TextView
        android:id="@+id/textView54"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/myriadpro_bold"
        android:letterSpacing="0.04"
        android:text="@string/items"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#9c9d9f"
        android:textSize="7dp"
        app:layout_constraintBottom_toTopOf="@+id/direInfoList"
        app:layout_constraintEnd_toEndOf="@+id/textView35"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/textView35"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout7" />

    <TextView
        android:id="@+id/textView53"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:fontFamily="@font/myriadpro_bold"
        android:letterSpacing="0.04"
        android:text="@string/player"
        android:textAllCaps="true"
        android:textColor="#9c9d9f"
        android:textSize="7dp"
        app:layout_constraintBottom_toTopOf="@+id/direInfoList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout7" />

    <TextView
        android:id="@+id/textView52"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:fontFamily="@font/myriadpro_bold"
        android:letterSpacing="0.04"
        android:text="@string/hero"
        android:textAllCaps="true"
        android:textColor="#9c9d9f"
        android:textSize="7dp"
        app:layout_constraintBottom_toTopOf="@+id/direInfoList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout7"
        app:layout_constraintVertical_bias="0.533" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/direInfoList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout7" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout7"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:background="#953740"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/myriadpro_bold"
            android:letterSpacing="0.04"
            android:text="@string/dire_forces"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="11.7dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView38"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/myriadpro_bold"
        android:letterSpacing="0.04"
        android:text="@string/level"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#9c9d9f"
        android:textSize="7dp"
        app:layout_constraintBottom_toTopOf="@+id/radiantInfoList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView36"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout6" />

    <TextView
        android:id="@+id/textView36"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/myriadpro_bold"
        android:letterSpacing="0.04"
        android:text="@string/backpack"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#9c9d9f"
        android:textSize="7dp"
        app:layout_constraintBottom_toTopOf="@+id/radiantInfoList"
        app:layout_constraintEnd_toStartOf="@+id/textView38"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView35"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout6" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:fontFamily="@font/myriadpro_bold"
        android:letterSpacing="0.04"
        android:text="@string/player"
        android:textAllCaps="true"
        android:textColor="#9c9d9f"
        android:textSize="7dp"
        app:layout_constraintBottom_toTopOf="@+id/radiantInfoList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout6" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/radiantInfoList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout6" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:fontFamily="@font/myriadpro_bold"
        android:letterSpacing="0.04"
        android:text="@string/hero"
        android:textAllCaps="true"
        android:textColor="#9c9d9f"
        android:textSize="7dp"
        app:layout_constraintBottom_toTopOf="@+id/radiantInfoList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout6" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout6"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:background="@color/secondaryGreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/myriadpro_bold"
            android:letterSpacing="0.04"
            android:text="@string/radiant_forces"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="11.7dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView35"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/myriadpro_bold"
        android:letterSpacing="0.04"
        android:text="@string/items"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#9c9d9f"
        android:textSize="7dp"
        app:layout_constraintBottom_toTopOf="@+id/radiantInfoList"
        app:layout_constraintEnd_toStartOf="@+id/textView36"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView34"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>