<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="326dp"
    android:layout_height="wrap_content"
    android:alpha="0.95"
    android:background="@drawable/help_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="25dp">

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/dialog_help_text_1"
        android:textAlignment="center"
        android:textSize="13.3dp" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:fontFamily="@font/myriadpro_regular"
        android:text="@string/dialog_help_text_2"
        android:textAlignment="center"
        android:textSize="13.3dp" />

    <View
        android:id="@+id/view"
        android:layout_width="207dp"
        android:layout_height="2.3dp"
        android:layout_marginBottom="15dp"
        android:background="@color/white" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/dialog_help_text_3"
        android:textAlignment="center"
        android:textSize="13.3dp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9.3dp"
        android:fontFamily="@font/myriadpro_regular"
        android:text="@string/dialog_help_text_4"
        android:textAlignment="center"
        android:textSize="13.3dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="16.3dp"
        app:srcCompat="@drawable/help_id_img" />

    <View
        android:id="@+id/view2"
        android:layout_width="207dp"
        android:layout_height="2.3dp"
        android:layout_marginBottom="15dp"
        android:background="@color/white" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/dialog_help_text_5"
        android:textAlignment="center"
        android:textSize="13.3dp" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/myriadpro_regular"
        android:text="@string/dialog_help_text_6"
        android:textAlignment="center"
        android:textSize="13.3dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        app:srcCompat="@drawable/help_url_img" />

</LinearLayout>