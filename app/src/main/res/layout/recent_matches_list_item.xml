<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="12dp"
    android:paddingEnd="10dp"
    android:background="?attr/selectableItemBackground">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/match_list_item_kills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/myriadpro_bold"
            android:gravity="center"
            android:text="K"
            android:textAllCaps="true"
            android:textColor="@color/primaryLight"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/myriadpro_bold"
            android:text="/"
            android:textAllCaps="true"
            android:textColor="@color/primaryLight"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/match_list_item_deaths"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/myriadpro_bold"
            android:gravity="center"
            android:text="D"
            android:textAllCaps="true"
            android:textColor="@color/primaryLight"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/myriadpro_bold"
            android:text="/"
            android:textAllCaps="true"
            android:textColor="@color/primaryLight"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/match_list_item_assists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/myriadpro_bold"
            android:gravity="center"
            android:text="A"
            android:textAllCaps="true"
            android:textColor="@color/primaryLight"
            android:textSize="11dp" />
    </TableRow>

    <ImageView
        android:id="@+id/match_list_item_hero_icon"
        android:layout_width="64dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:adjustViewBounds="false"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/abaddon" />

    <TextView
        android:id="@+id/match_list_item_hero_name"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_weight="0.5"
        android:fontFamily="@font/myriadpro_bold"
        android:text="Ancient Apparetion"
        android:textAllCaps="false"
        android:textColor="@color/primaryGreen"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/match_list_item_hero_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/match_list_item_result"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:fontFamily="@font/myriadpro_bold"
        android:text="@string/lose"
        android:textAllCaps="false"
        android:textColor="@color/primaryGreen"
        android:textSize="11dp"
        app:layout_constraintStart_toEndOf="@+id/match_list_item_hero_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/match_list_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/myriadpro_bold"
        android:text="TextView"
        android:textAllCaps="true"
        android:textColor="@color/primaryLight"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/match_list_item_result"
        app:layout_constraintTop_toBottomOf="@+id/match_list_item_result" />

</androidx.constraintlayout.widget.ConstraintLayout>