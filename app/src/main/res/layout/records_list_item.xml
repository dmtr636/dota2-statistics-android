<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/matchLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:paddingStart="22dp"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout4"
        tools:layout_editor_absoluteX="0dp">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/match_list_item_kills"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/myriadpro_bold"
                android:gravity="center"
                android:text="K"
                android:textAllCaps="true"
                android:textColor="@color/primaryLight"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/myriadpro_bold"
                android:text="/"
                android:textAllCaps="true"
                android:textColor="@color/primaryLight"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/match_list_item_deaths"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/myriadpro_bold"
                android:gravity="center"
                android:text="D"
                android:textAllCaps="true"
                android:textColor="@color/primaryLight"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/myriadpro_bold"
                android:text="/"
                android:textAllCaps="true"
                android:textColor="@color/primaryLight"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/match_list_item_assists"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/myriadpro_bold"
                android:gravity="center"
                android:text="A"
                android:textAllCaps="true"
                android:textColor="@color/primaryLight"
                android:textSize="12dp" />
        </TableRow>

        <ImageView
            android:id="@+id/match_list_item_hero_icon"
            android:layout_width="71dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:adjustViewBounds="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/match_list_item_hero_name"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="0.5"
            android:fontFamily="@font/myriadpro_bold"
            android:text="Ancient Apparetion"
            android:textAllCaps="false"
            android:textColor="@color/primaryGreen"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/match_list_item_hero_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/match_list_item_result"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:fontFamily="@font/myriadpro_bold"
            android:text="Поражение"
            android:textAllCaps="false"
            android:textColor="@color/primaryGreen"
            android:textSize="12dp"
            app:layout_constraintStart_toEndOf="@+id/match_list_item_hero_name"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/match_list_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/myriadpro_bold"
            android:text="TextView"
            android:textAllCaps="true"
            android:textColor="@color/primaryLight"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="@+id/match_list_item_result"
            app:layout_constraintTop_toBottomOf="@+id/match_list_item_result" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="0dp"
        android:layout_height="44.3dp"
        android:background="@drawable/rectangle_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/recordTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:fontFamily="@font/myriadpro_bold"
            android:letterSpacing="0.04"
            android:text="Наибольшее число убийств"
            android:textAllCaps="true"
            android:textColor="#c1c1c1"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/recordValue"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="26dp"
            android:fontFamily="@font/myriadpro_bold"
            android:text="10"
            android:textAlignment="center"
            android:textColor="#fefefe"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>